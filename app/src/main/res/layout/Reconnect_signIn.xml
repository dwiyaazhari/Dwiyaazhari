<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="327dp"
        android:layout_marginBottom="649dp"
        android:src="@drawable/BackButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="592dp"
        android:text="Selamat Datang di Reconnect"
        android:textColor="#070000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="591dp"
        android:text="Daftar untuk memulai"
        android:textColor="#070404" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="308dp"
        android:layout_marginBottom="536dp"
        android:text="Email" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="290dp"
        android:layout_marginBottom="453dp"
        android:text="Password" />

    <ImageView
        android:id="@+id/coloumnEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="485dp"
        android:visibility="visible"
        app:srcCompat="@drawable/inputEmail" />

    <ImageView
        android:id="@+id/coloumnPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="402dp"
        android:visibility="visible"
        app:srcCompat="@drawable/inputEmail" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="485dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/buttonMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="327dp"
        app:srcCompat="@drawable/buttonMasuk" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coloumnPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />


